{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react-jsx",
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "baseUrl": ".",
    "outDir": "./build",
    "paths": {
      "*": [
        "./src/*"
      ]
    },
    "typeRoots": [
      "types/**/*.d.ts",
      "node_modules/@types"
    ]
  },
  "exclude": [
    "*.js",
    "**/*.js"
  ]
}
